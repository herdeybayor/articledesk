<div class="row justify-content-center">
    <div class="col-md-8 text-center">
        <div class="error-container my-5 py-5">
            <i class="bi bi-exclamation-triangle text-danger" style="font-size: 5rem;"></i>
            <h1 class="mt-4 mb-3">Oops! Something went wrong</h1>
            <p class="lead text-muted mb-4">
                <%= message || 'We encountered an error processing your request.' %>
            </p>

            <% if (process.env.NODE_ENV==='development' && error) { %>
                <div class="card mt-4">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">Error Details</h5>
                    </div>
                    <div class="card-body text-start">
                        <p><strong>Message:</strong>
                            <%= error.message %>
                        </p>
                        <p><strong>Stack:</strong></p>
                        <pre class="bg-light p-3"><%= error.stack %></pre>
                    </div>
                </div>
                <% } %>

                    <div class="mt-5">
                        <a href="/" class="btn btn-primary me-2">
                            <i class="bi bi-house-door"></i> Go Home
                        </a>
                        <button onclick="window.history.back();" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </button>
                    </div>
        </div>
    </div>
</div>